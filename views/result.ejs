<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Upcoming Chests for <%= tag %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-white">

  <div class="container mt-5">
    <h2 class="text-center">Upcoming Chests for <%= tag %></h2>
    <div class="row mt-4">
      <% chests.forEach((chest, index) => { %>
        <div class="col-md-3 mb-3">
          <div class="card bg-secondary text-white p-3">
            <h5 class="card-title text-center">Chest <%= index + 1 %></h5>
            <p class="card-text text-center"><%= chest.name %></p>
          </div>
        </div>
      <% }); %>
    </div>
    <div class="text-center mt-3">
      <a href="/" class="btn btn-light">Track Another Player</a>
    </div>
  </div>

</body>
</html>
